require 'rubygems'
require 'sinatra'

root_dir = File.dirname(__FILE__)

set :environment, :default

set :root,  root_dir
set :app_file, File.join(root_dir, 'cheap_skate.rb')
set :logging, false
disable :run

FileUtils.mkdir_p 'log' unless File.exists?('log')
log = File.new("log/#{Sinatra::Application.environment()}.log", "a")
STDOUT.reopen(log)
STDERR.reopen(log)
require 'cheap_skate'
run Sinatra::Application
